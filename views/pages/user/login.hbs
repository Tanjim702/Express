<div class="container">
    {{#if isLoggedIn}}
    <p>User is logged in</p>
    {{/if}}
    <form action="/user/login" method="POST">
        ` <h2 class="blue-text darken-3">Login form</h2>
        <div class="row">
            <div class="col s12 input-field">
                <input type="email" name="email" value="{{values.email}}">
                <label for="">Email</label>
                {{#if error.email}}
                <p class="red-text err">{{error.email}}</p>
                {{/if}}
            </div>
            <div class="col s12 input-field">
                <input type="text" name="password" value="{{values.password}}">
                <label for="">Password</label>
                {{#if error.password}}
                <p class="red-text err">{{error.password}}</p>
                {{/if}}
            </div>
            <div class="input-field col s6 l6 center">
                <button class="btn center">
                    Submit
                </button>
            </div>
        </div>
    </form>
    <div class="container">
        <p class="blue-text lighten-3">
            Don't have an account?
            <a class="btn" href="/user/signup">
                <span class="grey-text">Signup</span>
                <i class="fas fa-user-plus"></i>
            </a>

        </p>
    </div>
</div>