<div class="">
    <h3 class="">
        Create your profile
    </h3>
    <div>
        <div class="">
            <img src={{user.profilePics}} alt="Profile pic">
        </div>
        <form action="/uploads/profilePics">
            <input type="file" name="profilePics" accept="images/*">
            <input type="button" value="Remove Pics">
        </form>

    </div>
    <div id="form">
        <form action="/dashboard/create-profile" method="POST">
            <div>
                <label for="name">Enter your name</label>
                <input type="text" name="name">
            </div>
            <div>
                <label for="name">Enter your email</label>
                <input type="text" disabled='true' name="email" value="{{user.email}}">
            </div>
            <div>
                <label for="name">Enter your title</label>
                <input type="text" name="title" value="Title">
            </div>
            <div>
                <label for="name">Enter your bio</label>
                <input type="text" name="bio">
            </div>
            <div>
                <label for="name">Enter your Facebook</label>
                <input type="text" name="facebook">
            </div>
        </form>
    </div>
</div>